<UserControl x:Class="QLHieuThuoc.forms.ThongKe"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QLHieuThuoc.forms"
             mc:Ignorable="d" 
             d:DesignHeight="848" d:DesignWidth="1096">
    <Grid Background="#F7F7F7">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>


        <!-- row 0 - thanh tìm kiếm -->
        <Border Grid.Row="0" CornerRadius="40" Background="White">
            <Grid>
                <DockPanel Margin="11">
                    <!-- tiêu đề -->
                    <TextBlock Text="  Thống Kê" 
                           FontSize="20"
                           FontFamily="Cascadia Mono"
                           Foreground="#565656"
                           DockPanel.Dock="Left" 
                           VerticalAlignment="Center">
                    </TextBlock>


                    <!-- tên tài khoản -->
                    <Border BorderBrush="#C9C9C9" BorderThickness="1" CornerRadius="40" DockPanel.Dock="Right" Width="230">
                        <StackPanel>
                            <!-- tên nhân viên -->
                            <TextBlock Text="Tên Tài Khoản" 
                                   FontSize="18"
                                   FontFamily="Cascadia Mono"
                                   Foreground="#565656"
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Top"
                                   Margin="0 8 0 0">
                            </TextBlock>
                            <!-- id nhân viên -->
                            <TextBlock Text="#idnv" FontSize="18" FontFamily="Cascadia Mono" Foreground="#C9C9C9"  HorizontalAlignment="Center"></TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- thông báo -->
                    <Grid DockPanel.Dock="Right" Width="85">
                        <Ellipse Height="58" Width="58" Fill="#C9C9C9" HorizontalAlignment="Center"/>
                        <Ellipse Height="56" Width="56" Fill="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>

                    <!-- thanh tìm kiếm -->
                    <Grid>
                        
                    </Grid>
                </DockPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
