<Window x:Class="QLHieuThuoc.forms.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QLHieuThuoc.forms"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        Title="QLHT" Height="1024" Width="1440">
    <Border Background="White" 
            CornerRadius="10"
            BorderThickness="1"
            BorderBrush="Black"
            Padding="20">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="262"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            
            <!-- grid colunm 0 -->
            <Border Background="#E2895A"
                    CornerRadius="20"
                    Grid.Column="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="24"></RowDefinition>
                        <RowDefinition Height="63"></RowDefinition>
                        <RowDefinition Height="34"></RowDefinition>
                        <RowDefinition Height="57"></RowDefinition>
                        <RowDefinition Height="15"></RowDefinition>
                        <RowDefinition Height="57"></RowDefinition>
                        <RowDefinition Height="15"></RowDefinition>
                        <RowDefinition Height="57"></RowDefinition>
                        <RowDefinition Height="15"></RowDefinition>
                        <RowDefinition Height="57"></RowDefinition>
                        <RowDefinition Height="15"></RowDefinition>
                        <RowDefinition Height="57"></RowDefinition>
                        <RowDefinition Height="15"></RowDefinition>
                        <RowDefinition Height="57"></RowDefinition>
                        <RowDefinition Height="15"></RowDefinition>
                        <RowDefinition Height="57"></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="16">
                        <StackPanel Orientation="Vertical" 
                                    VerticalAlignment="Bottom">
                            <Grid Height="57" >
                                
                            </Grid>
                            <Grid Height="57" Margin="0,15,0,24">
                                
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
            
            
            
        </Grid>
    </Border>
</Window>
